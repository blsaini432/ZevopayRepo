@model SubAdminModel

<input type="hidden" asp-for="Id" id="subAdminId" />
<div class="form-sample">
    <p class="card-description">
        @(string.IsNullOrEmpty(Model?.Id) ? "Add Member" : "Update Member")
    </p>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="FirstName" id="firstName">
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Last Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" asp-for="LastName" id="lastName">
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" asp-for="Email" id="email" />
                </div>
            </div>
        </div>
        @* <div class="col-md-6">
        <div class="form-group row">
        <label class="col-sm-3 col-form-label" asp-for="UserName">Username</label>
        <div class="col-sm-9">
        <input type="text" class="form-control" asp-for="UserName">
        </div>
        </div>
        </div> *@
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">PhoneNumber</label>
                <div class="col-sm-8">
                    <input type="number" min="1" class="form-control" maxlength="10" id="PhoneNumber" asp-for="PhoneNumber" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">AadharNumber</label>
                <div class="col-sm-8">
                    <input type="PanNumber" class="form-control" maxlength="12" asp-for="PanNumber" id="PanNumber" />
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">PanNumber</label>
                <div class="col-sm-8">
                    <input type="PanNumber" min="1" class="form-control" id="PanNumber" asp-for="PanNumber" />
                </div>
            </div>
        </div>
    </div>
    @if (string.IsNullOrEmpty(Model?.Id))
    {
        <div class="row">

            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input type="Password" class="form-control" asp-for="Password" id="password">
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Roles</label>
                    <div class="col-sm-9">
                        <select class="form-control" asp-for="ApplicationRoleId" asp-items="@Model.ApplicationRoles" id="RoleId">
                            <option value="">Select Role</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">


        <div class="col-md-6">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Address</label>
                <div class="col-sm-9">
                    <textarea id="address" class="form-control" cols="2" asp-for="Address" rows="2"></textarea>
                </div>
            </div>
        </div>

    </div>
    <input type="button" class="btn btn-primary btn-rounded btn-fw" id="AddOrUpdate-SubAdmin" value="@(string.IsNullOrEmpty(Model?.Id) ?"Submit" :"Update")" />
    <a class="btn btn-secondary btn-rounded btn-fw" asp-controller="Account" asp-action="SubAdminList">Back</a>

</div>

<script src="~/js/subadmin.js"></script>